<div class="title">The Hangout</div>
<div class="subtitle">say hello!</div>

<div>
  <div id="message-display">
    <% @messages.each do |message| %>
      <article class="message">
        <div class="message-header">
          <%# Eagerly load associated users in controller to prevent N+1 query problem %>
          <%= message.user.email %> 
        </div>
        <div class="message-body">
          <%= message.body %>
      </article>
    <% end %>
  </div>
  <div id="message-form">
    <%= form_with model: @message, local: false do |f| %>
      <div class="field has-addons">
        <div class="control">
          <%= f.text_field :body, id: 'message-input', class: 'input' %>
        </div>
        <div class="control">
          <%= f.submit 'Send Message', class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
